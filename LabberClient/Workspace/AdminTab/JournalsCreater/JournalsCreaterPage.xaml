                    Opacity="0.2"/>
            </TextBlock.Effect>
        </TextBlock>

        <Grid
            Grid.Row="1"
            Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="150" MaxWidth="250"/>
                <ColumnDefinition MinWidth="150" MaxWidth="250"/>
                <ColumnDefinition MinWidth="150" MaxWidth="250"/>
                <ColumnDefinition MinWidth="150" MaxWidth="250"/>
                <ColumnDefinition MinWidth="150" MaxWidth="250"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <GroupBox
                Header="Группы:"
                Margin="20 5 5 0"
                BorderBrush="Gray">
                <ListBox
                    SelectionMode="Single"
                    Margin="5"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding Groups}">
                </ListBox>
            </GroupBox>

            <GroupBox
                Header="Дисциплины:"
                Grid.Column="1"
                Margin="10 5 5 0"
                BorderBrush="Gray">
                <ListBox
                    SelectionMode="Single"
                    ItemsSource="{Binding Subjects}"
                    Margin="5"
                    Background="Transparent"
                    BorderThickness="0">
                </ListBox>
            </GroupBox>

            <GroupBox
                Header="Преподаватели:"
                Grid.Column="2"
                Margin="10 5 5 0"
                BorderBrush="Gray">
                <ListBox
                    SelectionMode="Single"
                    ItemsSource="{Binding Teachers}"
                    Margin="5"
                    Background="Transparent"
                    BorderThickness="0">
                </ListBox>
            </GroupBox>

            <GroupBox
                Grid.Column="3"
                Header="Новый журнал:"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0 5 0 0"
                BorderBrush="Gray">
                <StackPanel Margin="5" Width="120">
                    <TextBlock
                        Margin="5 2"
                        Text="{Binding NewGroup}"/>
                    
                    <TextBlock
                        Margin="5 2"
                        Text="{Binding NewSubject}"/>
                    
                    <TextBlock
                        Margin="5 2"
                        Text="{Binding NewTeacher}"/>

                    <Button
                        Margin="5"
                        IsEnabled="{Binding AddJournalEnabled}"
                        Command="{Binding AddJournal}"
                        Content="Добавить"/>
                </StackPanel>
            </GroupBox>

            <GroupBox
                Header="Журналы:"
                Grid.Column="4"
                Margin="10 5 20 0"
                BorderBrush="Gray">
                <ListBox
                    x:Name="journalsLbx"
                    SelectionMode="Single"
                    Margin="5"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding Journals}">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Удалить" Command="{Binding DeleteJournal}"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>
            </GroupBox>

            <Button
                x:Name="okBtn"
                Grid.Row="2"
                Grid.ColumnSpan="5"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="10"
                Width="100"
                Content="ОК"
                Command="{Binding Complete}">
            </Button>
        </Grid>
    </Grid>-->
</Page>
