                            Binding="{Binding User.Surname}"/>

                        <DataGridTextColumn Header="Имя" Width="135"
                            Binding="{Binding User.FirstName}"/>

                        <DataGridTextColumn Header="Отчество" Width="135"
                            Binding="{Binding User.SecondName}"/>
                    </DataGrid.Columns>

                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem
                                Header="Удалить всё"
