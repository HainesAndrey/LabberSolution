                <Grid
                    Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="145"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="145"/>
                        <ColumnDefinition Width="145"/>
                        <ColumnDefinition Width="145"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <Border
                        Grid.ColumnSpan="6"
                        BorderBrush="Gray"
                        BorderThickness="1 1 1 1"/>

                    <Border
                        Background="WhiteSmoke"
                        Grid.Row="1"
                        Grid.ColumnSpan="6"
                        BorderBrush="Gray"
                        BorderThickness="1 0 1 1"/>

                    <Border
                        Grid.ColumnSpan="6"
                        BorderBrush="Gray"
                        BorderThickness="1 0 1 1"/>

                    <Border
                        Grid.Column="1"
                        BorderBrush="Gray"
                        BorderThickness="1 0 0 0"/>

                    <Border
                        Grid.Column="2"
                        BorderBrush="Gray"
                        BorderThickness="1 0 0 0"/>

                    <Border
                        Grid.Column="3"
                        BorderBrush="Gray"
                        BorderThickness="1 0 0 0"/>

                    <Border
                        Grid.Column="4"
                        BorderBrush="Gray"
                        BorderThickness="1 0 0 0"/>

                    <TextBox
                        Margin="4 0 3 0"
                        VerticalAlignment="Center"
                        Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                            
                        FontSize="14"/>

                    <CheckBox
                        Grid.Column="1"
                        Margin="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsChecked="{Binding IsAdmin, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBox
                        Grid.Column="2"
                        Margin="4 0 3 0"
                        VerticalAlignment="Center"
                        Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}"
                        FontSize="14"/>

                    <TextBox
                        Grid.Column="3"
                        Margin="4 0 3 0"
                        VerticalAlignment="Center"
                        Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                        FontSize="14"/>

                    <TextBox
                        Grid.Column="4"
                        Margin="4 0 3 0"
                        VerticalAlignment="Center"
                        Text="{Binding SecondName, UpdateSourceTrigger=PropertyChanged}"
                        FontSize="14"/>

                    <Grid
                        Grid.Row="1"
                        Grid.ColumnSpan="6"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <Button
                                Margin="10 0 5 0"
                                VerticalAlignment="Center"
                                Content="{Binding AddSaveUserBtnTitle}"
                                FontSize="12"
                                Command="{Binding AddUser, NotifyOnSourceUpdated=True}"
                                IsEnabled="{Binding AddUserEnabled}"/>

                            <Button
                                Margin="5 0"
                                VerticalAlignment="Center"
                                Content="Очистить поля"
                                FontSize="12"
                                Command="{Binding Clear}"
                                IsEnabled="{Binding ClearEnabled}"/>

                            <Button
                                Margin="5 0 10 0"
                                VerticalAlignment="Center"
                                Content="Добавить из Excel"
                                FontSize="12"
                                Command="{Binding AddFromExcel}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <Grid
            Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button
                Content="Отмена"
                VerticalAlignment="Top"
                FontSize="14"
                Margin="80 5"
                Command="{Binding Cancel}"/>
            <Button
                Grid.Column="1"
                Content="Продолжить"
                VerticalAlignment="Top"
                FontSize="14"
                Margin="80 5"
                Command="{Binding Next}"/>
        </Grid>
    </Grid>
</Page>