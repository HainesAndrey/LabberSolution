<Page
    x:Class="LabberClient.CreateDB.CreateDBPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="400"
    d:DesignWidth="700"
    Title="CreateDBPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="400"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="700"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Background="GhostWhite">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>

            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    ShadowDepth="0"
                    Opacity="0.7"/>
            </Grid.Effect>

            <Border
                BorderBrush="Gray"
                Grid.RowSpan="10"
                BorderThickness="1"/>

            <TextBlock
                Text="Создание новой базы данных"
                Foreground="DodgerBlue"
                TextAlignment="Center"
                TextWrapping="Wrap"
                FontSize="18"
                VerticalAlignment="Center"/>

            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Left"
                Margin="20 0">
                <TextBlock
                    Text="Название файла новой базы данных:"
                    FontSize="14"/>

                <TextBox
                    Margin="0 2 0 0"
                    Width="659"
                    VerticalAlignment="Bottom"
                    Text="{Binding FileName}"
                    FontSize="14"/>
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Left"
                Margin="20 0">
                <TextBlock
                    Text="Путь к файлу новой базы данных (папка):"
                    FontSize="14"/>
                <StackPanel
                    Orientation="Horizontal"
                    Margin="0 2 0 0">
                    <TextBox
                        Width="590"
                        Text="{Binding FileName}"
                        FontSize="14"/>
                    <Button
                        Margin="5 0 0 0"
                        Content="Обзор..."
                        Width="64"
                        FontSize="14"
                        Command="{Binding ShowFileDialog}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Row="3"
                Margin="20 10 20 0">
                <TextBlock
                    Text="Добавление пользователей:"
                    FontSize="14"
                    Margin="0 0 0 2"/>
                <StackPanel>
                    <DataGrid
                        Grid.ColumnSpan="6"
                        ScrollViewer.CanContentScroll="False"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        SelectionMode="Single"
                        SelectionUnit="FullRow"
                        CanUserReorderColumns="False"
                        CanUserSortColumns="True"
                        HeadersVisibility="Column"
                        VerticalScrollBarVisibility="Visible"
                        HorizontalScrollBarVisibility="Hidden"
                        BorderBrush="LightGray"
                        BorderThickness="1 1 1 0"
                        HorizontalGridLinesBrush="LightGray"
                        VerticalGridLinesBrush="LightGray"
                        Background="WhiteSmoke"
                        ItemsSource="{Binding Users, Mode=TwoWay}"
                        RowHeight="25"
                        MaxHeight="125">

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Style.Triggers>
                                    <Trigger Property="DataGridRow.IsSelected" Value="True">
                                        <Setter Property="Background" Value="DeepSkyBlue"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type DataGridCell}">
                                            <Grid>
                                                <ContentPresenter VerticalAlignment="Center" />
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Логин" Width="138"
                                Binding="{Binding User.Login}"/>

                            <DataGridCheckBoxColumn Header="Администратор" Width="98"
                                Binding="{Binding IsAdmin}"/>

                            <DataGridTextColumn Header="Фамилия" Width="135"
                                Binding="{Binding User.Surname}"/>

                            <DataGridTextColumn Header="Имя" Width="135"
                                Binding="{Binding User.FirstName}"/>

                            <DataGridTextColumn Header="Отчество" Width="135"
                                Binding="{Binding User.SecondName}"/>
                        </DataGrid.Columns>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Редактировать"/>
                                <MenuItem Header="Удалить"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="138"/>
                            <ColumnDefinition Width="98"/>
                            <ColumnDefinition Width="135"/>
                            <ColumnDefinition Width="135"/>
                            <ColumnDefinition Width="135"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>

                        <Border
                            Grid.ColumnSpan="6"
                            BorderBrush="Gray"
                            BorderThickness="1 1 1 1"/>

                        <Border
                            Background="WhiteSmoke"
                            Grid.Row="1"
                            Grid.ColumnSpan="6"
                            BorderBrush="LightGray"
                            BorderThickness="1 0 1 1"/>

                        <Border
                            Grid.ColumnSpan="6"
                            BorderBrush="Gray"
                            BorderThickness="1 0 1 1"/>

                        <Border
                            Grid.Column="1"
                            BorderBrush="Gray"
                            BorderThickness="1 0 0 0"/>

                        <Border
                            Grid.Column="2"
                            BorderBrush="Gray"
                            BorderThickness="1 0 0 0"/>

                        <Border
                            Grid.Column="3"
                            BorderBrush="Gray"
                            BorderThickness="1 0 0 0"/>

                        <Border
                            Grid.Column="4"
                            BorderBrush="Gray"
                            BorderThickness="1 0 0 0"/>

                        <TextBox
                            Margin="4 0 3 0"
                            VerticalAlignment="Center"/>

                        <CheckBox
                            Grid.Column="1"
                            Margin="4 0 3 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>

                        <TextBox
                            Grid.Column="2"
                            Margin="4 0 3 0"
                            VerticalAlignment="Center"/>

                        <TextBox
                            Grid.Column="3"
                            Margin="4 0 3 0"
                            VerticalAlignment="Center"/>

                        <TextBox
                            Grid.Column="4"
                            Margin="4 0 3 0"
                            VerticalAlignment="Center"/>

                        <Grid
                            Grid.Row="1"
                            Grid.ColumnSpan="6"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <StackPanel
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <Button
                                    Margin="10 0 5 0"
                                    VerticalAlignment="Center"
                                    Content="Добавить"
                                    FontSize="12"
                                    Command="{Binding AddUser}"
                                    IsEnabled="{Binding AddUserEnabled}"/>

                                <Button
                                    Margin="5 0"
                                    VerticalAlignment="Center"
                                    Content="Очистить"
                                    FontSize="12"
                                    Command="{Binding Clear}"
                                    IsEnabled="{Binding ClearEnabled}"/>

                                <Button
                                    Margin="5 0"
                                    VerticalAlignment="Center"
                                    Content="Удалить всё"
                                    FontSize="12"
                                    Command="{Binding DeleteAll}"
                                    IsEnabled="{Binding DeleteAllEnabled}"/>

                                <Button
                                    Margin="5 0 10 0"
                                    VerticalAlignment="Center"
                                    Content="Добавить из Exel"
                                    FontSize="12"
                                    Command="{Binding AddFromExel}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </StackPanel>
            </StackPanel>

            <Grid
                Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button
                    Content="Отмена"
                    VerticalAlignment="Top"
                    FontSize="14"
                    Margin="80 5"
                    Command="{Binding Cancel}"/>
                <Button
                    Grid.Column="1"
                    Content="Продолжить"
                    VerticalAlignment="Top"
                    FontSize="14"
                    Margin="80 5"
                    Command="{Binding Next}"/>
            </Grid>
        </Grid>
    </Grid>
</Page>